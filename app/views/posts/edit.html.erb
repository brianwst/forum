<%= form_for @post, url: post_path(@post), method: :patch do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :content %>
	<%= f.text_field :content %>

	<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %>
			
	<%= f.submit %>
<% end  %>
<%= link_to "Cancel", post_path(@post) %>