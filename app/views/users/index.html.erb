<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2 class="panel-title" style="text-align: center">Users</h3>
    </div>
    <div class="panel-body" style="text-align: center">
      <ul>
      <% @users.each do |user| %>
  		<li>
          <%= user.email %>
          <% unless current_user.friends.include?(user) %>
            <%= link_to "Add user", friendships_path(friend_id: user.id), method: :post %>
          <% end %>
  		</li>
  	<% end %>

  	</ul>
    </div>
   </div>
</div>